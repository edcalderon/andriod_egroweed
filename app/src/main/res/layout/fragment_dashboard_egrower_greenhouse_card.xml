<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.DashboardEgrowerGreenhouseCardFragment">

    <Space
        android:layout_width="0dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="345dp"
        android:layout_height="245dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="#A8A5A5"
        app:cardBackgroundColor="#EFEFEF"
        app:cardCornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.407">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="358dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_greenhouse_name_label_card_egrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Green House"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/imageView_avatar_greenhouse_card_egrower"
                app:layout_constraintEnd_toEndOf="@+id/imageView_avatar_greenhouse_card_egrower"
                app:layout_constraintHorizontal_bias="0.431"
                app:layout_constraintStart_toStartOf="@+id/imageView_avatar_greenhouse_card_egrower"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/imageView_avatar_greenhouse_card_egrower"
                android:layout_width="129dp"
                android:layout_height="122dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.382"
                app:srcCompat="@drawable/ic_green_house_2_" />

            <TextView
                android:id="@+id/textView_label_owner_card_egrower"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="E-grower Master"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView_label_location_card_egrower"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView_label_location_card_egrower"
                app:layout_constraintTop_toBottomOf="@+id/textView_label_location_card_egrower" />

            <TextView
                android:id="@+id/textView_capacity_label_card_egrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="Capacity"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.255"
                app:layout_constraintStart_toEndOf="@+id/textView_greenhouse_name_label_card_egrower"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_label_location_card_egrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Location"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/textView_capacity_label_card_egrower"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView_capacity_label_card_egrower"
                app:layout_constraintTop_toBottomOf="@+id/textView_capacity_label_card_egrower" />

            <Button
                android:id="@+id/button_participate_greenhouse_card_egrower"
                android:layout_width="135dp"
                android:layout_height="34dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_corner_purple"
                android:text="SPONSOR"
                android:textColor="#F4F2F2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.829"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView_name_card_greenhouse_egrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="La morinda"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imageView_avatar_greenhouse_card_egrower"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="@+id/imageView_avatar_greenhouse_card_egrower"
                app:layout_constraintTop_toBottomOf="@+id/imageView_avatar_greenhouse_card_egrower"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/textView_capacity_card_greenhouse_egrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="1500"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.134"
                app:layout_constraintStart_toEndOf="@+id/textView_capacity_label_card_egrower"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_location_card_greenhouse_egrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Cauca"
                app:layout_constraintEnd_toEndOf="@+id/textView_capacity_card_greenhouse_egrower"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView_capacity_card_greenhouse_egrower"
                app:layout_constraintTop_toBottomOf="@+id/textView_capacity_card_greenhouse_egrower" />

            <TextView
                android:id="@+id/textView_owner_card_greenhouse_egrower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Manarks s.a.s"
                app:layout_constraintEnd_toEndOf="@+id/textView_location_card_greenhouse_egrower"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/textView_location_card_greenhouse_egrower"
                app:layout_constraintTop_toBottomOf="@+id/textView_location_card_greenhouse_egrower" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="46dp"
                android:layout_height="37dp"
                android:src="@drawable/ic_drawing_plant"
                app:layout_constraintBottom_toBottomOf="@+id/textView_capacity_card_greenhouse_egrower"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.277"
                app:layout_constraintStart_toEndOf="@+id/textView_capacity_card_greenhouse_egrower"
                app:layout_constraintTop_toTopOf="@+id/textView_capacity_card_greenhouse_egrower"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="35dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_colombia"
                app:layout_constraintBottom_toBottomOf="@+id/textView_location_card_greenhouse_egrower"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintStart_toEndOf="@+id/textView_location_card_greenhouse_egrower"
                app:layout_constraintTop_toTopOf="@+id/textView_location_card_greenhouse_egrower" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <Space
        android:layout_width="0dp"
        android:layout_height="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>