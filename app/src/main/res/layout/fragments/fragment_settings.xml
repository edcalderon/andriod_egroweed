<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-condensed-light"
            android:text="@string/app_name"
            android:textColor="@color/green"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_logout_button_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/configuration_button_label_student_menu_logout"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/imageButton_logout"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="@+id/imageButton_logout"
            app:layout_constraintTop_toBottomOf="@+id/imageButton_logout" />

        <ImageButton
            android:id="@+id/imageButton_logout"
            android:layout_width="50dp"
            android:layout_height="51dp"
            android:layout_marginTop="180dp"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="@+id/text_settings"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintStart_toStartOf="@+id/text_settings"
            app:layout_constraintTop_toBottomOf="@+id/text_settings"
            app:srcCompat="@drawable/ic_switch_off" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>