<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.DashboardEgrowerSponsorPlantFormFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SeekBar
            android:id="@+id/seekBar_sponsorplats_form"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="226dp"
            android:layout_height="34dp"
            android:max="1500"
            android:progress="1"
            app:layout_constraintEnd_toEndOf="@+id/imageView_plant_sponsor_form"
            app:layout_constraintStart_toStartOf="@+id/imageView_plant_sponsor_form"
            app:layout_constraintTop_toBottomOf="@+id/imageView_plant_sponsor_form" />

        <Button
            android:id="@+id/button_seekbar_add"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/ic_baseline_add_24"
            app:layout_constraintBottom_toTopOf="@+id/textView_seekbar_sporsorplants_form"
            app:layout_constraintStart_toEndOf="@+id/seekBar_sponsorplats_form"
            app:layout_constraintTop_toTopOf="@+id/seekBar_sponsorplats_form"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView_seekbar_sporsorplants_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="@+id/button_seekbar_add"
            app:layout_constraintStart_toStartOf="@+id/button_seekbar_remove"
            app:layout_constraintTop_toBottomOf="@+id/seekBar_sponsorplats_form" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Plants to Sponsor in"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_close_sponsor_form"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/ic_baseline_cancel_24"
            app:layout_constraintBottom_toTopOf="@+id/seekBar_sponsorplats_form"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.895"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.135" />

        <Button
            android:id="@+id/button_seekbar_remove"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:background="@android:color/transparent"
            android:drawableBottom="@drawable/ic_baseline_remove_24"
            app:layout_constraintBottom_toBottomOf="@+id/seekBar_sponsorplats_form"
            app:layout_constraintEnd_toStartOf="@+id/seekBar_sponsorplats_form"
            app:layout_constraintTop_toTopOf="@+id/seekBar_sponsorplats_form"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/button_make_sponsor_form"
            android:layout_width="104dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_corner_purple"
            android:text="Sponsor"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button_seekbar_add"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="@+id/button_seekbar_remove"
            app:layout_constraintTop_toBottomOf="@+id/textView_seekbar_sporsorplants_form"
            app:layout_constraintVertical_bias="0.008" />

        <TextView
            android:id="@+id/textView_greenhouse_name_sponsor_form"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <ImageView
            android:id="@+id/imageView_plant_sponsor_form"
            android:layout_width="120dp"
            android:layout_height="110dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_cannabis_smile_1"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView_greenhouse_name_sponsor_form" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>